# Application
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Database (adjust to match your database credentials)
DATABASE_URL=postgresql://admin:admin@localhost:5432/kairos

# Authentication & Sessions
# Session TTL in seconds (default: 30 days = 2592000 seconds)
SESSION_TTL=2592000
# Session secret for signing tokens (generate a strong random secret for production)
SESSION_SECRET=change-me-in-production-use-a-long-random-string
# Refresh token TTL in seconds (default: 90 days = 7776000 seconds)
REFRESH_TOKEN_TTL=7776000
